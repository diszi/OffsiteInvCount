<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">



    <LinearLayout
        android:id="@+id/itemslayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/colorLightGray"
        >


        <TextView
            android:id="@+id/countBook_item_partnr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
            android:ellipsize="end"
            android:padding="5dp"
            android:textAlignment="center"
            android:paddingBottom="10dp"

            />
        <!--android:text="SAMSUNG S24D33H 24 IN TN LED MONITOR"-->

        <TextView
            android:id="@+id/countBook_item_serialnr_batch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:ellipsize="end"
            android:padding="5dp"
            android:textAlignment="center"
            android:paddingBottom="10dp"
            />

        <TextView
            android:id="@+id/countBook_item_bin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:ellipsize="end"
            android:padding="5dp"
            android:textAlignment="center"
            android:paddingBottom="10dp"
            />


        <ImageButton
            android:id="@+id/countBook_item_reconcile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_check_icon"
            android:paddingBottom="10dp"/>



    </LinearLayout>




</LinearLayout>