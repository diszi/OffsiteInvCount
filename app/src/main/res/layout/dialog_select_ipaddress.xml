<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="400dp"
    android:minWidth="400dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/selectDialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:text="Select Environment"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary" />

    <ScrollView
        android:id="@+id/actDetails_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="false"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:id="@+id/button_eles_sim"

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Production - SIM"
                android:layout_gravity="center"
                android:padding="15dp"
                android:layout_marginBottom="10dp"/>



            <Button
                android:id="@+id/button_eles_wifi"

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Production - WIFI"
                android:layout_gravity="center"
                android:padding="15dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/button_teszt_sim"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Test - SIM"
                android:layout_gravity="center"
                android:padding="15dp"
                android:layout_marginBottom="10dp"/>


            <Button
                android:id="@+id/button_teszt_wifi"

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Test - WIFI"
                android:layout_gravity="center"
                android:padding="15dp"/>

        </LinearLayout>
    </ScrollView>




</LinearLayout>