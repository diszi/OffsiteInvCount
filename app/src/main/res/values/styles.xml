    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Settings for Toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">#ffffff</item>

    </style>

    <!--CardView style -->
    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="TextDetail" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">#6e6e6e</item>
        <item name="android:textSize">18sp</item>

        <!--<item name="android:textSize">20dp</item>-->
    </style>



    <!--CardView style -->
    <style name="MyCardViewStyle_v2" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_margin">15dp</item>
    </style>


    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>


    <style name="Inventory_LabelDetail" parent="BaseFont" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">5dp</item>

    </style>

    <style name="BaseFont">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Inventory_TextDetail" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>

        <item name="android:textColor">#6e6e6e</item>
        <item name="android:textSize">18sp</item>

        <!--<item name="android:textSize">20dp</item>-->
    </style>



    <style name="CardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">15dp</item>
    </style>


</resources>
